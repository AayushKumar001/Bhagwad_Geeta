<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/diary1activity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor1"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toobar_title"
                android:text="@string/heading"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/font3"
                android:layout_centerVertical="true"
                android:layout_marginStart="64dp"/>
            <ImageButton
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@mipmap/white_arrow_1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
    <TextView
        android:text="Chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="@dimen/font4"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorblack"/>

    <Spinner
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        />

        <FrameLayout
            android:id="@+id/chapter_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="75dp">

           <!-- <EditText
                android:text="Yada Yada Hi Dharmasya Glanirva Bhavathi Bharatha,Abhyuthanam Adharmaysya Tadatmanam Srijami Aham"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:id="@+id/edittext39"
                android:textSize="14sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="0dp" />-->
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:ems="10"
                android:textStyle="italic"
                android:layout_marginTop="0dp"
                android:id="@+id/editText3"
                android:background="@drawable/rounded_borderedittext"
                android:minLines="2"
                android:maxLines="3"
                android:scrollbarThumbVertical="@null"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbars="vertical"
                android:cursorVisible="true"
                android:inputType="textMultiLine"
                android:layout_marginStart="23dp" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chapter_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp">

            <Button
                android:text="Cancel"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/colorblack"
                android:id="@+id/button12"
                android:background="@drawable/button"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                />

            <Button
                android:text="Save"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="0dp"
                android:id="@+id/button13"
                android:background="@drawable/buttonsave"
                android:textColor="@color/colorwhite" />
        </LinearLayout>
        </RelativeLayout>
</RelativeLayout>